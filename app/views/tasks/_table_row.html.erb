<tr class='<%= task.parent? ? "border-top" : "" %>'>

  <td style="font-weight: bold;" class="<%= task.sub_tasks? ? "pl-5" : "" %>">
    <span class="text-<%= task.css_color %> mr-8"><%= task.symbol %></span>

    <% if task.done? %>
      <s class="text-muted"><%= task.description %></s>
    <% else %>
      <%= task.description %>   
    <% end %>
  </td>

  <td>
    <% if(task.due_date) %>
      <%= I18n.l( task.due_date ) %>
    <% else %>
      Sem prazo
    <% end %>
  </td>

  <td class="text-right pr-0">
    <% if task.parent? %>
      <%= link_to "+ Sub-tarefa", new_task_path(parent_id: task.id), class: "btn btn-success btn-sm" %>
    <% end %>

    <%= link_to "Editar", edit_task_path(task), class: "btn btn-secondary btn-sm" %>
    <%= link_to "Apagar", task, data: {turbo_method: :delete, turbo_confirm: "VocÃª tem certeza?"}, class: "btn btn-danger btn-sm", style: "display: inline-block;" %>
  </td>
</tr>