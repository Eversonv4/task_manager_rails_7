<div class="row mb-2">
  <div class="col-8">
    <h1 class="display-4 font-weight-normal">Tarefas</h1>
  </div>

  <div class="col-4 mt-4 text-right">
    <%= link_to '+ Tarefa', new_task_path, class: 'btn btn-success' %>
  </div>
</div>

<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>